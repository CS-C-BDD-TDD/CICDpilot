app.controller('CourseOfActionIndexController', ['$scope','$rootScope','Restangular',
  function ($scope, $rootScope, Restangular) {
    $rootScope.breadcrumbs = [{text:'Home',link:'#/',icon:'fa-home'},{text:'All Courses of Action',link:'#/course_of_actions',icon:'fa-list'}];
    $scope.fetching = true;
    Restangular.one('/course_of_actions').get().then(function(data){
      $scope.course_of_actions = data.course_of_actions;
      $scope.metadata = data.metadata;
      $scope.fetching= false;
    },function(res){
      toastr.error("Unable to load Courses of Action");
      $scope.fetching= false;
    });
  }
]);
