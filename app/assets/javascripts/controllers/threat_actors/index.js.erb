app.controller('ThreatActorsIndexController', ['$scope','$rootScope','Restangular',
  function ($scope, $rootScope, Restangular) {
    $rootScope.breadcrumbs = [{text:'Home',link:'#/',icon:'fa-home'},{text:'All Threat Actors',link:'#/threat_actors',icon:'fa-list'}];
    $scope.fetching = true;
    Restangular.one('/threat_actors').get().then(function(data){
      $scope.threat_actors = data.threat_actors;
      $scope.metadata = data.metadata;
      $scope.fetching= false;
    },function(res){
      toastr.error("Unable to load Threat Actors");
      $scope.fetching= false;
    });
  }
]);
