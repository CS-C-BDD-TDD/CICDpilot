<% environment.context_class.instance_eval { include Rails.application.routes.url_helpers } %>

app.directive('portSelector', function(){
  return {
    restrict: 'E',
    templateUrl: '<%=asset_path("observables/object-selectors/port-selector.html",type: :template)%>',
    scope: {
      ports: '=',
      observableToBeLinked: '=',
      linkObservableView: '='
    },
    controller: ['$scope', 'Restangular', '$rootScope', 'Marking','Observable',
      function($scope, Restangular, $rootScope,Marking,Observable) {
      $scope.date_picker_opts = {
        defaultRanges: true
      };
      $scope.q = '';
      if (angular.isUndefined($scope.offset)) {
        $scope.offset=0;
      }
      if (angular.isUndefined($scope.amount)) {
        $scope.amount=$rootScope.setting_value('DEFAULT_MAX_RECORDS');
      }

      // Cleanup
      $scope.$on('$destroy', function() {
        $('.daterangepicker').remove();
      });
      
      $scope.dateRangePicker = function(picker) {
        $scope.date_picker_object = picker;
        $scope.offset=0;
        $scope.getPorts($scope.offset);
      };

      $scope.startSearch = function() {
        $scope.offset=0;
        $scope.getPorts($scope.offset);
      };

      $scope.getPorts = function(offset) {
        var curr_ind = Observable.fetch_indicator_from_scope($scope);
        var curr_markings = curr_ind.stix_markings_attributes;
        if (!$rootScope.is_undefined_or_null(curr_ind.acs_set_id)){
          Restangular.one('acs_sets').get({id: curr_ind.acs_set_id}).then(function(data){
            // set it equal to the existing markings
            if (angular.isDefined(data.stix_markings)){
              curr_markings = data.stix_markings;
            }
            getPortList(offset, curr_markings);
          },function(res){
              toastr.error("Unable to load ACS Set Markings");
          });
        } else {
          getPortList(offset, curr_markings);
        }
      };

      function getPortList(offset, current_markings){
        var classification_limit = Marking.get_classification_attributes(current_markings);
        if (angular.isDefined($scope.metadata)) {
          $scope.metadata.total_count = null;
        }
        Restangular.one("/ports").get({
          ebt: $scope.date_picker_object.getStartDate(),
          iet: $scope.date_picker_object.getEndDate(),
          q: $scope.q,
          amount: $scope.amount,
          classification_limit: classification_limit,
          offset: offset
        }).then(
          function(data){
            $scope.ports = data.ports;
            $scope.metadata = data.metadata;
          },
          function(res){
            toastr.error("Unable to load Ports");
          }
        );
      }

      $scope.setSelected = function() {
        var so=$scope.observableToBeLinked;

        if (angular.isDefined(so)) {
          if (so.remote_object_id===this.port.cybox_object_id && so.remote_object_type==='Port') {
            $scope.observableToBeLinked={};
          } else {
            $scope.observableToBeLinked={remote_object_id:this.port.cybox_object_id,remote_object_type:'Port',port:this.port};
          }
        }
      }
      $scope.classSelected = function() {
        var so=$scope.observableToBeLinked;

        if (angular.isDefined(so)) {
          if (so.remote_object_id===this.port.cybox_object_id && so.remote_object_type==='Port') {
            return "bg-primary";
          }
        }
      }
      $scope.$watch('date_picker_object',function(object) {
        if (angular.isDefined(object)) {
          $scope.getPorts($scope.offset);
        }
      });
      $rootScope.$on('reloadObservableSelect',function(event,type) {if (type === 'Port') {$scope.getPorts($scope.offset)}});

      // setEdit is a special function because it's called by an ng-click within an ng-repeat
      $scope.setEdit = function() {
          Restangular.one('/ports/'+ this.port.cybox_object_id).get().then(function(data){
            $scope.port = Marking.translate_existing_attributes(data);

            $scope.$parent.$parent.selected = $scope.port;
            $scope.$parent.$parent.observableToBeLinked={remote_object_id:$scope.port.cybox_object_id,remote_object_type:'Port',port:$scope.port};
            $scope.linkObservableView = 'edit';
          },function(res){
              toastr.error("Unable to load Port");
          });
      }

      $scope.$parent.$parent.after_port_save = function() {
          var match = _.find($scope.$parent.$parent.ports,{'cybox_object_id':data.cybox_object_id});
          var index = _.indexOf($scope.$parent.$parent.ports, match);
          $scope.$parent.$parent.ports.splice(index,1,data);
          $scope.$parent.$parent.observableToBeLinked.port=data;
          $scope.$parent.$parent.showSelectedObservable();
          if ($rootScope.setting_value('CLASSIFICATION') == true){
            $rootScope.$emit('reloadObservableSelect', 'Port');
          }
      }
    }],
    controllerAs: 'portSelCtrl'
  }
});
