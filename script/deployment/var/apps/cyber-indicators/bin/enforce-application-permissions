# DO NOT MODIFY THIS FILE
#!/bin/bash
. /etc/sysconfig/cyber-indicators

echo "Enforcing Cyber Indicators permissions."
echo "changing 0750 tomcat:tomcat /var/apps/cyber-indicators"
chmod -R 750 /var/apps/cyber-indicators
chown -R tomcat:tomcat /var/apps/cyber-indicators
echo "changing 0750 tomcat:tomcat /var/apps/solr"
chmod -R 750 /var/apps/solr
chown -R tomcat:tomcat /var/apps/solr
echo "changing 0750 tomcat:tomcat /opt/tomcat7"
chmod -R 750 /opt/tomcat7
chown -R tomcat:tomcat /opt/tomcat7
echo "changing 0750 tomcat:tomcat /var/log/cyber-indicators"
chmod -R 750 /var/log/cyber-indicators
chown -R tomcat:tomcat /var/log/cyber-indicators
echo "changing 0750 tomcat:tomcat /usr/share/tomcat7"
chmod -R 750 /usr/share/tomcat7
chown -R tomcat:tomcat /usr/share/tomcat7
echo "changing 0740 tomcat:tomcat $TNS_ADMIN/tnsnames.ora"
chmod 740 $TNS_ADMIN/tnsnames.ora
chown root:tomcat $TNS_ADMIN/tnsnames.ora
echo "changing 0740 tomcat:tomcat /etc/cyber-indicators"
chmod -R 740 /etc/cyber-indicators
chown -R tomcat:tomcat /etc/cyber-indicators
